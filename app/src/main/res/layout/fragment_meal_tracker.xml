<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment">
    <FrameLayout

        android:id="@+id/mealFrame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:ignore="MissingConstraints">


        <EditText
            android:id="@+id/editBF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140sp"
            android:layout_marginStart="125dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Breakfast Item" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150sp"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:text="Add Item:" />

        <ImageButton
            android:id="@+id/addBF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130sp"
            android:layout_marginStart="350dp"
            app:srcCompat="@android:drawable/ic_input_add" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80sp"
            android:layout_marginStart="10dp"
            android:textSize="30sp"
            android:text="Breakfast" />
        <TextView
            android:id="@+id/textAddBF"
            android:layout_width="390dp"
            android:layout_height="100dp"
            android:layout_marginTop="180sp"
            android:layout_marginStart="10dp"
            android:text="" />




        <EditText
            android:id="@+id/editLC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="340sp"
            android:layout_marginStart="125dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Lunch Item" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="350sp"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:text="Add Item:" />

        <ImageButton
            android:id="@+id/addLC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="330sp"
            android:layout_marginStart="350dp"
            app:srcCompat="@android:drawable/ic_input_add" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="280sp"
            android:layout_marginStart="10dp"
            android:textSize="30sp"
            android:text="Lunch" />
        <TextView
            android:id="@+id/textAddLC"
            android:layout_width="390dp"
            android:layout_height="100dp"
            android:layout_marginTop="380sp"
            android:layout_marginStart="10dp"
            android:text="" />


        <EditText
            android:id="@+id/editDN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="540sp"
            android:layout_marginStart="125dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Dinner Item" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="550sp"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:text="Add Item:" />

        <ImageButton
            android:id="@+id/addDN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="530sp"
            android:layout_marginStart="350dp"
            app:srcCompat="@android:drawable/ic_input_add" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="480sp"
            android:text="Dinner"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textAddDN"
            android:layout_width="390dp"
            android:layout_height="100dp"
            android:layout_marginTop="580sp"
            android:layout_marginStart="10dp"
            android:text="" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
